<header>
  <h1>Edit Budget </h1>
</header>

<div class="new-card shadow">
  <form action="/users/<%= @user.id %>" method="post">
    <div class="budget-form">

      <label for="budget">Budget: </label>
      <div class="budget">
        <input type="number" name="budget_pounds" min="0" value="<%= @user.budget_pounds %>" class="pounds" required>
        <input type="number" name="budget_pence" min="00" max= "99" value="<%= @user.budget_pence %>" class="pence" required>
      </div>

      <label for="budget-reset">Reset Budget?</label>
      <input type="checkbox" name="reset">

      <div class="new-cat-merc flex-center-center">
        <input type="submit" value="Edit Budget" class="new-cat-merc-submit">
      </div>
    </div>
  </form>
</div>
