<section id="profile">

  <div class="left flex-column">
    <div id="profile-header">
      <h1><%= @greetings.sample %> <%= @user.first_name %>!</h1>
    </div>
<div class="time-date"><%= Time.now.strftime("%H:%M %p - %A, %d %B %Y") %> </div>
    <div id="budget-overview" class="flex-center-center flex-column shadow">
      <div class="budget-bar shadow">
        <div class="budget-indicator <%= @budget.status %>"></div>
      </div>
        <p>Your remaining budget is <%= @user.pretty_remaining_budget %> </p>
      <p><%= @budget.status_text %></p>
    </div>

    <a href="./<%=@user.id%>/transactions/new" id="profile-add-transaction" class="flex-center-center shadow">
      <i class="fas fa-plus-circle"></i>&nbsp;New transaction
    </a>
<br>
    <h2>Recent Transaction</h2>
    <% for transaction in @user.transactions.first(5) %>
    <a href="./<%= @user.id %>/transactions/<%= transaction.id %>">
      <div class="profile-transaction shadow">
        <div class="recent-transaction-date">
          <%= transaction.pretty_date %>
        </div>
        <%= transaction.pretty_value %> at <%= transaction.merchant.name %> on <%= transaction.category.name.capitalize %>
      </div>
    </a>
    <% end %>
  </div>


  <div class="right flex-column">

    <div class="flex-center-center goal">
      <h2>You Goal</h2>
      <img src="/images/goal/<%= @advisor.img %>" alt="goal_image" class="goal-image shadow">
      <p class="user-goal">"<%= @user.goal %>"</p>
    </div>

    <div class="card flex-center-center advice shadow">
      <h2>Advice</h2>

    </div>

    <div class="shadow savings">
        <div class="saving-amount flex-center-center shadow"><p><%= @budget.savings_amount %></p></div>
        <h2 class="savings-header flex-center-center shadow">Savings</h2>
      </div>

  </div>



</section>
